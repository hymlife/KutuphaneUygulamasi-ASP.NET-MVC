@using kutuphane.Models;
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_KitapLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>KİTAP ADI</th>
        <th>YAZARI</th>
        <th>SAYFA SAYISI</th>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th> Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach(var x in Model)
    {
        <tr>
            <td>@x.KITAPID</td>
            <td>@x.AD</td>
            <td>@x.YAZAR</td>
            <td>@x.SAYFA</td>
            <td>@x.KATEGORI</td>
            <td>@x.TBLKATEGORI.KATEGORIAD</td>
            <td><a href="/Kitap/KitapSil/@x.KITAPID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@x.KITAPID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Kitap/KitapEkle" class="btn btn-primary">Yeni Kitap</a>